CREATE TABLE employee (
  id NUMBER GENERATED BY DEFAULT ON NULL AS IDENTITY PRIMARY KEY,
  empid VARCHAR2(50) NOT NULL,
  name VARCHAR2(255),
  gender VARCHAR2(20),
  doj DATE,
  nsbt_batch_no VARCHAR2(100),
  status VARCHAR2(50),
  resignation_date DATE,
  released_date DATE,
  grade VARCHAR2(50),
  bu VARCHAR2(100),
  mpr_no VARCHAR2(100),
  io_name VARCHAR2(150),
  created_at TIMESTAMP DEFAULT SYSTIMESTAMP,
  updated_at TIMESTAMP DEFAULT SYSTIMESTAMP
);

CREATE INDEX idx_emp_empid ON employee(empid);
